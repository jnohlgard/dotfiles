[push]
	default = simple
[fetch]
	prune = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[grep]
	lineNumber = true
[log]
	date = iso-local
[diff]
	colorMoved = default
	colorMovedWS = ignore-space-change
[core]
	#pager = delta
	untrackedCache = true
	excludesfile = ~/.config/dotfiles/gitignore_global
#[interactive]
#	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	line-numbers = true
[merge]
	conflictstyle = diff3
[alias]
	st = status -sb
	ci = commit -v
	a = add
	ap = add -p
	fa = fetch --all
	suri = submodule update --init --recursive
	co = checkout
	sw = switch
	br = branch
	ds = diff --stat
	ls = log --oneline
[color]
	ui = true
	pager = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto
[color "diff"]
	commit = green
	meta = yellow
	frag = cyan
	old = red
	new = green
	whitespace = red reverse

