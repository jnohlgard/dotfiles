[push]
	default = simple
[fetch]
	prune = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[grep]
	lineNumber = true
[log]
	date = iso-local
[diff]
	colorMoved = default
	colorMovedWS = ignore-space-change
[core]
	untrackedCache = true
	excludesfile = /opt/dotfiles/gitignore_global
[alias]
	st = status -sb
	ci = commit -v
	a = add
	ap = add -p
	fa = fetch --all
	suri = submodule update --init --recursive
	co = checkout
	sw = switch
	br = branch
	ds = diff --stat
	ls = log --oneline
[color]
	ui = true
	pager = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto

[color "diff"]
	commit = green
	meta = yellow
	frag = cyan
	old = red
	new = green
	whitespace = red reverse
